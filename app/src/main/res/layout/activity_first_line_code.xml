<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstline.FirstLineCodeActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_activity_usage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="活动的基本用法"/>

    <Button
        android:id="@+id/bt_activity_life"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="活动的生命周期"/>

    <Button
        android:id="@+id/bt_activity_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第3章 UI开发"/>

    <Button
        android:id="@+id/bt_activity_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第4章 Fragment"
        android:textAllCaps="false"/>

</LinearLayout>