<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstline.chapter10.DownloadTestActivity">

    <Button
        android:id="@+id/bt_download_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Start Download"/>

    <Button
        android:id="@+id/bt_download_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bt_download_start"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Pause Download"/>

    <Button
        android:id="@+id/bt_download_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bt_download_pause"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Cancel Download"/>

</androidx.constraintlayout.widget.ConstraintLayout>